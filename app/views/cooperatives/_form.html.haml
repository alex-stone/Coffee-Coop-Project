= form_for @cooperative do |f|
  -if @cooperative.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cooperative.errors.count, "error")} prohibited this cooperative from being saved:"
      %ul
        - @cooperative.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .actions
    = f.submit 'Save'
