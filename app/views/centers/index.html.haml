%div.span
  %h1= t :centers

  %table{:class => 'table table-bordered table-striped table-condensed row-linked'}
    %tr
      %th= t(:name)
      %th= t(:producer)
      %th= t(:transactions)
      - if @is_admin
        %th= t(:options)

    - @centers.each do |center|
      %tr
        %td= center.name
        %td= link_to 'Producers', center_producers_path(center), :class => 'btn btn-small'
        %td= link_to 'Transactions', center_transactions_path(center), :class => 'btn btn-small'
        - if @is_admin
          %td= link_to 'Edit', edit_center_path(center), :class => 'btn btn-small btn-edit'

  %br
  - if @is_admin
    = link_to 'New Center', new_center_path, :class => 'btn btn-new'
