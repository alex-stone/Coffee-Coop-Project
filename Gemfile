gem 'thin', :group => :production


group :development, :test do
  gem 'sqlite3' 
  gem 'rspec-rails'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'launchy'
end

group :test do
  gem 'cucumber-rails'
  gem 'cucumber-rails-training-wheels'
end

# Gems used only for assets and not required
# in production environments by default.
