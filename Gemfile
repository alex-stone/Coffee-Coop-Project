source 'https://rubygems.org'

gem 'rails', '3.2.2'
gem 'heroku'
gem 'pg', :group => :production

# Omniauth
gem 'omniauth-openid'
gem 'omniauth-facebook'
gem 'omniauth-twitter'


# HAML Helpers
gem 'haml-rails'
gem 'ruby_parser'
gem 'hpricot'

# WEBrick Alternatives
